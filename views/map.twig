<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
      html { height: 100% }
      body { height: 100%; margin: 0; padding: 0 }
      #map-canvas { height: 100% }
      #legend {
        font-family: Arial, sans-serif;
        background: #fff;
        padding: 10px;
        margin: 10px;
        border: 3px solid #000;
      }
      #legend h3 {
        margin-top: 0;
      }
      #legend img {
        vertical-align: middle;
      }
    </style>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyACM0Ndf6ERw_2ARAVPy-sRIaZ33OJxt1Y&sensor=false">
    </script>
    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: new google.maps.LatLng(41.37, 2.17),
          zoom: 8,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

        var trafficLayer = new google.maps.TrafficLayer();
        trafficLayer.setMap(map);

        function loadIncidents(map){
            $.ajax({
                url: "/api",
                success: function( data ) {
                    var incidencias = data.incidencia;
                    for(var i=0, total=incidencias.length; i<total; i++) {
                        var incidencia = incidencias[i];
                        new google.maps.Marker({
                            position: new google.maps.LatLng(incidencia.x, incidencia.y),
                            map: map,
                            icon: getIconImage(styles[incidencia.tipo].icon),
                            title:incidencia.tipo + " [" + incidencia.nivel + "] " + incidencia.causa
                        });
                    }
                }
            });
        }

        var styles = {
            OBRAS : {
                icon : 'construction',
                name : 'Obras'
            },
            METEOROLOGICA : {
                icon : 'caution',
                name : 'Meteorologica'
            },
            RETENCION : {
                icon : 'stop',
                name : 'Retención'
            },
            CONO : {
                icon : 'closedroad',
                name : 'Cono'
            },
            "PUERTOS DE MONTA?A" : {
                icon : 'icy_road',
                name : 'Puertos de montaña'
            }
        };
        function getIconImage(icon){
            return '/web/images/' + icon + '.png';
        }

        map.controls[google.maps.ControlPosition.RIGHT_BOTTOM].push(document.getElementById('legend'));
        for (var styleName in styles) {
            var style = styles[styleName],
                div = document.createElement('div');
            div.innerHTML = '<img src="' + getIconImage(style.icon) + '"> ' + style.name;
            legend.appendChild(div);
        }

        loadIncidents(map);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>
  <body>
    <div id="legend">
    </div>
    <div id="map-canvas"/>
  </body>
</html>